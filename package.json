{
  "name": "vrn-boilerplate-monorepo",
  "private": true,
  "author": "Cphayim <i@cphayim.me>",
  "repository": "git@github.com:vrn-deco/vrn-boilerplate.git",
  "license": "MIT",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0",
    "pnpm": ">=6.28.0"
  },
  "packageManager": "pnpm@6.28.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "clean": "esno scripts/clean.ts --build --deps",
    "clean:build": "esno scripts/clean.ts --build",
    "clean:deps": "esno scripts/clean.ts --deps",
    "build": "esno scripts/build.ts",
    "gen:manifest": "pnpm gen --filter @vrn-deco/boilerplate-manifest",
    "gen:manifest:http": "pnpm gen:http --filter @vrn-deco/boilerplate-manifest",
    "new:boi": "esno scripts/new --boilerplate",
    "new:preset": "esno scripts/new --preset",
    "test": "exit 0;",
    "lint": "scripts/lint.sh",
    "format": "scripts/format.sh",
    "commit": "git add . && cz",
    "deploy:ci": "scripts/ci-deploy.sh"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@ombro/logger": "^1.5.5",
    "@ombro/ts-config": "^1.4.0",
    "@types/inquirer": "^8.2.0",
    "@types/node": "^16.11.26",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vrn-deco/boilerplate-manifest": "workspace:*",
    "@vrn-deco/boilerplate-protocol": "workspace:*",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "esno": "^0.14.1",
    "execa": "^5.1.1",
    "husky": "^6.0.0",
    "inquirer": "^8.2.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  }
}
